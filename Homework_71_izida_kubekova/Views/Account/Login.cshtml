@model LoginViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 class="text-center">Заполните форму для входа</h2>
<p class="text-center mb-3">или <a class="card-link" asp-action="SignUp">Зарегистрируйтесь</a></p>
<h5 class="text-danger text-center mb-3">@ViewBag.Message</h5>
<div class="text-danger text-center mb-3" asp-validation-summary="All"></div>
<div class="row align-items-start justify-content-center">
    <div class="col-sm-12 col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Login" method="post" asp-antiforgery="true">
                    <div class="row align-items-start justify-content-center mb-3">
                        <label asp-for="Email" class="col-sm-10 col-form-label"></label>
                        <div class="col-sm-10">
                            <span asp-validation-for="Email" class="text-danger text-center mb-3"></span>
                            <input asp-for="Email" class="form-control" id="Email">
                        </div>
                    </div>
                    <div class="row align-items-start justify-content-center mb-3">
                        <label asp-for="Password" class="col-sm-10 col-form-label"></label>
                        <div class="col-sm-10">
                            <span asp-validation-for="Password" class="text-danger text-center mb-3"></span>
                            <input asp-for="Password" class="form-control" id="Password">
                        </div>
                    </div>
                    <div class="row align-items-start justify-content-center mb-3">
                        <div class="form-check">
                            <label asp-for="RememberMe" for="rememberMe" class="form-check-label"></label>
                            <input type="checkbox" id="rememberMe" asp-for="RememberMe" checked class="form-check-input">
                        </div>
                    </div>
                    <div class="row align-items-start text-center justify-content-center mb-3">
                        <button type="submit" class="btn btn-primary">Войти</button>
                    </div>
                    <input type="hidden" asp-for="ReturnUrl">
                </form>
            </div>
        </div>
    </div>
</div>