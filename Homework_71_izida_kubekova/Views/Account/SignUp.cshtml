@model RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    Layout = "_Layout";
}

<h2 class="text-center">Заполните поля</h2>
<div class="text-danger text-center mb-3" asp-validation-summary="All"></div>
<div class="row align-items-start justify-content-center">
    <div class="col-sm-12 col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="SignUp" method="post" asp-antiforgery="true">
                    <div class="row align-items-start justify-content-center mb-3">
                        <label asp-for="Email" class="col-sm-10 col-form-label"></label>
                        <div class="col-sm-10">
                            <span asp-validation-for="Email" class="text-danger text-center mb-3"></span>
                            <input asp-for="Email" class="form-control" id="Email">
                        </div>
                    </div>
                    <div class="row align-items-start justify-content-center mb-3">
                        <label for="Name" class="col-sm-10 col-form-label">Имя</label>
                        <div class="col-sm-10">
                            <span asp-validation-for="UserName" class="text-danger text-center mb-3"></span>
                            <input asp-for="UserName" type="text" class="form-control" id="Name">
                        </div>
                    </div>
                    <div class="row align-items-start justify-content-center mb-3">
                        <label asp-for="Password" class="col-sm-10 col-form-label"></label>
                        <div class="col-sm-10">
                            <span asp-validation-for="Password" class="text-danger text-center mb-3"></span>
                            <input asp-for="Password" class="form-control" id="Password">
                        </div>
                    </div>
                    <div class="row align-items-start justify-content-center mb-3">
                        <label asp-for="ConfirmPassword" class="col-sm-10 col-form-label">Повторите пароль</label>
                        <div class="col-sm-10">
                            <span asp-validation-for="ConfirmPassword" class="text-danger text-center mb-3"></span>
                            <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword">
                        </div>
                    </div>
                    <div class="row align-items-start text-center justify-content-center mb-3">
                        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
